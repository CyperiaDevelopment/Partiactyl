                        <button type="submit" class="btn btn-primary" onclick="getUserInfo()">Get</button>

                        <script>
                            async function getUserInfo() {
                                let userinfo = await fetch("/userinfo?id=" + document.getElementById("userinfoid").value);
                                alert(await userinfo.text())
                            }
